{
    "env" : {
        "browser" : true,
        "node" : true,
        "es6" : true
    },
    "rules" : {
        "comma-dangle" : 0
    },
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module",
        "ecmaFeatures": {
            "modules": true,
            "jsx": true,
            "spread" : true,
            "restParams" : true
        }
    }
}